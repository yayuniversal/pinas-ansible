server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name box.{{ main_domain }};

    # Allowlist
    include /etc/nginx/conf.d/allowlist.conf;
    deny all;

    add_header Strict-Transport-Security "max-age=63072000" always;

    access_log /var/log/nginx/box.access.log;
    error_log /var/log/nginx/box.error.log;

    location / {
        proxy_pass https://192.168.1.254;
    }
}
